<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="prefs_night_mode_screen">


    <androidx.preference.ListPreference
        android:defaultValue="@string/settings_default_night_mode_value"
        android:dialogTitle="@string/night_mode_dialog_title"
        android:entries="@array/night_mode_types"
        android:entryValues="@array/night_mode_values"
        android:key="@string/settings_key_night_mode"
        android:summary="@string/night_mode_state_summary"
        android:title="@string/night_mode_dialog_title" />

    <androidx.preference.Preference
        android:key="night_mode_description"
        android:summary="@string/night_mode_description"
        android:title="" />

    <androidx.preference.CheckBoxPreference
        android:defaultValue="@bool/settings_default_true"
        android:key="@string/settings_key_night_mode_app_theme_control"
        android:persistent="true"
        android:summaryOff=""
        android:summaryOn=""
        android:title="@string/night_mode_app_night_theme" />

    <androidx.preference.CheckBoxPreference
        android:defaultValue="@bool/settings_default_false"
        android:key="@string/settings_key_night_mode_theme_control"
        android:persistent="true"
        android:summaryOff=""
        android:summaryOn=""
        android:title="@string/night_mode_darken_keyboard_theme" />

    <androidx.preference.CheckBoxPreference
        android:defaultValue="@bool/settings_default_true"
        android:key="@string/settings_key_night_mode_sound_control"
        android:persistent="true"
        android:summaryOff=""
        android:summaryOn=""
        android:title="@string/night_mode_sound_control" />

    <androidx.preference.CheckBoxPreference
        android:defaultValue="@bool/settings_default_true"
        android:key="@string/settings_key_night_mode_vibration_control"
        android:persistent="true"
        android:summaryOff=""
        android:summaryOn=""
        android:title="@string/night_mode_vibration_control" />

</androidx.preference.PreferenceScreen>
