<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:ordering="sequentially">
    <set android:ordering="together">
        <objectAnimator android:duration="@integer/extendingAnimTime">
            <propertyValuesHolder android:propertyName="alpha" android:valueTo="1.0f"/>
            <propertyValuesHolder android:propertyName="scaleX" android:valueTo="1.0f"/>
            <propertyValuesHolder android:propertyName="scaleY" android:valueTo="1.0f"/>
        </objectAnimator>
    </set>
    <animator android:duration="@integer/close_suggestions_text_visible_time"/>
    <set android:ordering="together">
        <objectAnimator android:duration="@integer/extendingAnimTime">
            <propertyValuesHolder android:propertyName="alpha" android:valueTo="0.0f"/>
            <propertyValuesHolder android:propertyName="scaleX" android:valueTo="0.0f"/>
            <propertyValuesHolder android:propertyName="scaleY" android:valueTo="0.0f"/>
        </objectAnimator>
    </set>
</set>
