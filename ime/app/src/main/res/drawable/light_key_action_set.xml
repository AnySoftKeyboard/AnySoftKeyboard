<selector xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:ask="http://schemas.android.com/apk/res-auto">

    <!-- Search keys -->
    <item ask:action_search="true" ask:key_type_feedback="true" android:drawable="@drawable/sym_keyboard_search_light"/>
    <item ask:action_search="true" android:drawable="@drawable/sym_keyboard_search_light"/>

    <!-- Done keys -->
    <item ask:action_done="true" ask:key_type_feedback="true" android:drawable="@drawable/sym_keyboard_done_light"/>
    <item ask:action_done="true" android:drawable="@drawable/sym_keyboard_done_light"/>

    <!-- ENTER keys -->
    <item ask:key_type_feedback="true" android:drawable="@drawable/sym_keyboard_return_light"/>
    <item android:drawable="@drawable/sym_keyboard_return_light"/>
</selector>
