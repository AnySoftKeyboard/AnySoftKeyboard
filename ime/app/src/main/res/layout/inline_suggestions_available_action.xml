<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/inline_suggestions_strip_root"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/candidate_strip_height"
    android:clickable="true"
    android:background="@drawable/inline_strip_action_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/inline_suggestions_strip_text"
        style="@style/Ask.Text.SuggestionsAction.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start" />

    <ImageView
        android:id="@+id/inline_suggestions_strip_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/hint_click_for_inline_suggestions"
        android:scaleType="centerInside"
        android:paddingEnd="4dp"
        android:paddingStart="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="4dp"
        android:src="@drawable/ic_inline_suggestions" />
</LinearLayout>
