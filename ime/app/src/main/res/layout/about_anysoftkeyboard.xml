<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        style="@style/Ask.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="@string/ime_name"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/about_app_version"
        style="@style/Ask.Text.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="@string/version_text"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/about_copyright"
        style="@style/Ask.Text.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="@string/about_copyright_text"
        android:textIsSelectable="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/share_app_details"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/transparent_click_feedback_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_share" />

        <ImageView
            android:id="@+id/rate_app_in_store"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/transparent_click_feedback_background"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_rate" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5" />

    <TextView
        android:id="@+id/about_legal_stuff_link"
        style="@style/Ask.Text.Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="@string/about_additional_software_licenses" />

    <TextView
        android:id="@+id/about_privacy_link"
        style="@style/Ask.Text.Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="@string/read_our_privacy_policy" />

    <TextView
        android:id="@+id/about_web_site_link"
        style="@style/Ask.Text.Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="@string/visit_our_web_site" />
</LinearLayout>
