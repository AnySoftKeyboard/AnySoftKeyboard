<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <include layout="@layout/item_keyboard_include_layout"
        android:id="@+id/item_keyboard_view_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Ask.Text.Title"
        android:layout_centerHorizontal="true"
        android:ellipsize="marquee"
        android:layout_below="@id/item_keyboard_view_background"
        android:singleLine="true"
        android:id="@+id/title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Ask.Text.SubTitle"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:id="@+id/subtitle"/>

    <ImageView
        android:id="@+id/enabled_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/item_selected_circle_background"
        android:src="@drawable/ic_accept"/>
</RelativeLayout>
