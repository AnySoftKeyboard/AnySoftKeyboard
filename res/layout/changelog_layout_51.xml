<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:tag="20111010"
              android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent"
              android:text="* Themes (skins) support! Choose one:"
              style="@android:style/TextAppearance.Small"/>
    <Button android:id="@+id/settings_keyboard_theme_button" android:text="@string/theme_addons_settings"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent"
              android:text="* And, It is possible to replace the bottom row:"
              style="@android:style/TextAppearance.Small"/>
    <Button android:id="@+id/settings_bottom_row_button" android:text="@string/bottom_row_addons_settings"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent"
              android:text="* And, it is possible to replace the top row:"
              style="@android:style/TextAppearance.Small"/>
    <Button android:id="@+id/settings_top_row_button" android:text="@string/top_row_addons_settings"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent"
              android:text="* Translations: CA, DE, FI, HE.\n* Bug fixes."
              style="@android:style/TextAppearance.Small"/>
</LinearLayout>