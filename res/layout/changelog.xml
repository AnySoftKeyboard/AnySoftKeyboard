<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
	<ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:orientation="vertical">
		    <RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		    	<ImageView android:src="@drawable/icon_8_key" android:layout_width="wrap_content" android:layout_margin="10dp" android:layout_height="wrap_content" android:id="@+id/changelog_icon" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:scaleType="centerInside"/>
		    	<TextView
		    	android:id="@+id/changelog_app_name"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textStyle="bold"
		        android:gravity="center"
		        android:textSize="22sp"
		        android:text="@string/ime_name"
		        android:textColor="#FFF"
		        android:layout_toRightOf="@id/changelog_icon"
		        android:layout_alignParentTop="true"
		        android:paddingTop="10dp"
		        />
		    	<TextView
		        android:id="@+id/changelog_label"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textStyle="bold"
		        android:gravity="center"
		        android:textSize="20sp"
		        android:text="@string/changelog"
		        android:layout_toRightOf="@id/changelog_icon"
		        android:layout_below="@id/changelog_app_name"
		        android:textColor="#FFF"/>
		        <TextView
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:gravity="center"
		        android:textSize="14sp"
		        android:autoLink="web"
		        android:text="http://s.evendanan.net/ask"
		        android:layout_toRightOf="@id/changelog_icon"
		        android:layout_below="@id/changelog_label"
		        android:textColor="#BBB"/>
		    </RelativeLayout>
		    <TextView
		    	android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:text="20100608 - 25"
		        android:textStyle="bold"
		        android:gravity="center"
		        android:textSize="16sp"
		        android:paddingTop="8dp"
		        android:paddingLeft="8dp"
		        android:paddingRight="8dp"
		        android:textColor="#CCC"
		        />
		    <TextView android:text="http://bit.ly/cSI8F1" android:textSize="12sp" android:autoLink="web" android:layout_width="fill_parent" android:layout_height="wrap_content"
		    	android:paddingTop="4dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"/>
		    <TextView
		    	android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:text="* Fix for re-loading external packages on install/upgrade/uninstall (fixes reboot requirement).\n* Auto-completes in landscape (e.g., contact names in To fields).\n* Backword support (shift+backspace).\n* and many more."
		        android:textSize="16sp"
		        android:paddingTop="4dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"
		        android:textColor="#AAA"
		        />
		    <TextView
		    	android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:text="20100516 - 23"
		        android:textStyle="bold"
		        android:gravity="center"
		        android:textSize="16sp"
		        android:paddingTop="8dp"
		        android:paddingLeft="8dp"
		        android:paddingRight="8dp"
		        android:textColor="#CCC"
		        />
		    <TextView
		    	android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:text="* Bugs fixes (landscape layout issue)"
		        android:textSize="16sp"
		        android:paddingTop="4dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"
		        android:textColor="#AAA"
		        />
		    <TextView
		    	android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:text="20100515 - 21"
		        android:textStyle="bold"
		        android:gravity="center"
		        android:textSize="16sp"
		        android:paddingTop="8dp"
		        android:paddingLeft="8dp"
		        android:paddingRight="8dp"
		        android:textColor="#CCC"
		        />
		    <TextView android:text="http://bit.ly/a9S8J4" android:textSize="12sp" android:autoLink="web" android:layout_width="fill_parent" android:layout_height="wrap_content"
		    	android:paddingTop="4dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"/>
		    <TextView
		    	android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:text="* External packages! All languages have been removed from the main application! Search the Market for your language:"
		        android:textSize="16sp"
		        android:paddingTop="4dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"
		        android:textColor="#AAA"
		        />
		    <Button android:id="@+id/market_search_button" android:text="@string/search_market_for_addons" android:layout_width="wrap_content" android:layout_height="wrap_content"
		    	android:layout_gravity="center"/>
		    <TextView
		    	android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:text="* Changelog notification (this one :) )"
		        android:textSize="16sp"
		        android:paddingTop="4dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"
		        android:textColor="#AAA"
		        />
		    <TextView
		    	android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:text="* Some bug fixes (e.g., Enter/Next key problem, Suggestions under Samsung)"
		        android:textSize="16sp"
		        android:paddingTop="4dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"
		        android:textColor="#AAA"
		        />
		    <TextView
		    	android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textStyle="bold"
		        android:gravity="center"
		        android:text="20100328 - 17"
		        android:textSize="16sp"
		        android:paddingTop="8dp"
		        android:paddingLeft="8dp"
		        android:paddingRight="8dp"
		        android:textColor="#CCC"
		        />
		    <TextView android:text="http://bit.ly/a4zpkB" android:textSize="12sp" android:autoLink="web" android:layout_width="fill_parent" android:layout_height="wrap_content"
		    	android:paddingTop="4dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"/>
		    <TextView
		    	android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:text="* New layouts\n* Many bug fixes\n* High definition devices support (Nexus One, Droid, etc.)\n* Swipe actions are configurable, under Settings->Tweaks option. Click to open the Settings page:"
		        android:textSize="16sp"
		        android:paddingTop="4dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"
		        android:textColor="#AAA"
		        />
		    <Button android:id="@+id/goto_settings_button" android:text="@string/ime_settings" android:layout_width="wrap_content" android:layout_height="wrap_content"
		    	android:layout_gravity="center"/>
		    
		    <TextView android:text="Entire changelog can be found here: http://bit.ly/KgviA" android:textSize="14sp" android:autoLink="web" android:layout_width="fill_parent" android:layout_height="wrap_content"
		    	android:paddingTop="8dp"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
