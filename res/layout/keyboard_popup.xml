<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/keyboard_popup_panel_background"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        >
    <com.anysoftkeyboard.keyboards.views.AnyKeyboardBaseView
            android:id="@+id/AnyKeyboardBaseView"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/keyboard_transparent"

            keyBackground="@drawable/btn_keyboard_key_gingerbread_popup"
            keyHysteresisDistance="0dip"
            verticalCorrection="@dimen/mini_keyboard_vertical_correction"
            />
</LinearLayout>
