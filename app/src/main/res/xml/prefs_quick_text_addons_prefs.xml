<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="prefs_quick_text_addons_screen">

    <CheckBoxPreference
        android:defaultValue="@bool/settings_default_one_shot_quick_text_popup"
        android:key="@string/settings_key_one_shot_quick_text_popup"
        android:persistent="true"
        android:summaryOff="@string/one_shot_quick_text_popup_off_summary"
        android:summaryOn="@string/one_shot_quick_text_popup_on_summary"
        android:title="@string/one_shot_quick_text_popup"/>

    <CheckBoxPreference
        android:defaultValue="@bool/settings_default_search_quick_text_tags"
        android:key="@string/settings_key_search_quick_text_tags"
        android:persistent="true"
        android:summaryOff="@string/quick_text_tags_search_off_summary"
        android:summaryOn="@string/quick_text_tags_search_on_summary"
        android:title="@string/quick_text_tags_search"/>

    <net.evendanan.pushingpixels.ListPreference
        android:defaultValue="@string/settings_default_initial_quick_text_tab"
        android:dialogTitle="@string/initial_quick_text_tab_title"
        android:entries="@array/settings_key_initial_quick_text_tab_names"
        android:entryValues="@array/settings_key_initial_quick_text_tab_values"
        android:key="@string/settings_key_initial_quick_text_tab"
        android:summary="@string/initial_quick_text_tab_summary"
        android:title="@string/initial_quick_text_tab_title"/>

</PreferenceScreen>